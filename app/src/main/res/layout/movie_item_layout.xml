<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/ilMovieImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/ilTitleKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilMovieImage"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Episode I: The Phantom Menace"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilTitleKey"
        app:layout_constraintTop_toBottomOf="@id/ilMovieImage"/>

    <TextView
        android:id="@+id/ilLaunchKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lanÃ§amento: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilTitleKey"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "19-05-1999"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilLaunchKey"
        app:layout_constraintTop_toBottomOf="@id/ilTitleKey"/>

    <TextView
        android:id="@+id/ilDirectorKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="diretor: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilLaunchKey"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Rick McCallum"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilDirectorKey"
        app:layout_constraintTop_toBottomOf="@id/ilLaunchKey"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ilMovieImage"
        app:layout_constraintEnd_toEndOf="@+id/ilMovieImage"
        app:layout_constraintStart_toStartOf="@+id/ilMovieImage"
        app:layout_constraintTop_toTopOf="@+id/ilMovieImage" />
</androidx.constraintlayout.widget.ConstraintLayout>