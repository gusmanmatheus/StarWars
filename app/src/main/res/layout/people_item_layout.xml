<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/ilImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
            android:id="@+id/ilFirstKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name: "
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/ilImage"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/ilFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Luke Skywalker"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/ilFirstKey"
            app:layout_constraintTop_toBottomOf="@id/ilImage"/>

    <TextView
        android:id="@+id/ilSecondKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="altura: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilFirstKey"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "172cm"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilFirstKey"
        app:layout_constraintTop_toBottomOf="@id/ilFirstKey"/>

    <TextView
        android:id="@+id/ilThirdKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="peso: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilSecondKey"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "77kg"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilFirstKey"
        app:layout_constraintTop_toBottomOf="@id/ilSecondKey"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ilImage"
        app:layout_constraintEnd_toEndOf="@+id/ilImage"
        app:layout_constraintStart_toStartOf="@+id/ilImage"
        app:layout_constraintTop_toTopOf="@+id/ilImage" />

</androidx.constraintlayout.widget.ConstraintLayout>