<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/ilPeopleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
            android:id="@+id/ilNameKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name: "
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/ilPeopleImage"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/ilName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Luke Skywalker"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/ilNameKey"
            app:layout_constraintTop_toBottomOf="@id/ilPeopleImage"/>

    <TextView
        android:id="@+id/ilHeightKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="altura: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilNameKey"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "172cm"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilNameKey"
        app:layout_constraintTop_toBottomOf="@id/ilNameKey"/>

    <TextView
        android:id="@+id/ilMassKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="peso: "
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ilHeightKey"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/ilDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "77kg"
        android:layout_margin="16dp"
        app:layout_constraintStart_toEndOf="@id/ilNameKey"
        app:layout_constraintTop_toBottomOf="@id/ilHeightKey"/>
</androidx.constraintlayout.widget.ConstraintLayout>